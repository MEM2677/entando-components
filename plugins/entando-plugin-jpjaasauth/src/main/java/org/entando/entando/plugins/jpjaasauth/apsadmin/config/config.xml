<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	
    <package name="jpjaasauth_do/jpjaasauth/Config" namespace="/do/jpjaasauth/Config" extends="entando-default">
    	
   	
    	<action name="edit" class="jpjaasauthConfigAction" method="edit">
            <result type="tiles">jpjaasauth.admin.config.entry</result>
            <result name="input" type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="save" class="jpjaasauthConfigAction" method="save">
        	<result name="input" type="tiles">jpjaasauth.admin.config.entry</result>
        	<result type="tiles">jpjaasauth.admin.config.ok</result>
        	<interceptor-ref name="entandoValidationStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    </package>
   
</struts>